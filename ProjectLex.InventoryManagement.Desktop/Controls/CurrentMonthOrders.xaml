<UserControl x:Class="ProjectLex.InventoryManagement.Desktop.Controls.CurrentMonthOrders"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectLex.InventoryManagement.Desktop.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1720">
    <Grid Margin="20 20 20 20">
        
        <Label FontFamily="Sogoe UI" FontWeight="Bold" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="ORDERS" FontSize="18" Foreground="#2d89ef"/>
                    <TextBlock Text="FOR THIS MONTH" FontSize="8" HorizontalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="{Binding CurrentMonthOrders}" Style="{StaticResource MaterialDesignTextBlock}" Margin="20 0 0 0" FontSize="24" VerticalAlignment="Center"/>
            </StackPanel>
        </Label>
        
    </Grid>
</UserControl>
