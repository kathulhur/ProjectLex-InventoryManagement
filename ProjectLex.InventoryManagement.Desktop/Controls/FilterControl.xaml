<UserControl x:Class="ProjectLex.InventoryManagement.Desktop.Controls.FilterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectLex.InventoryManagement.Desktop.Controls"
             Name="CustomFilterControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBlock 
                Text="Filter: " 
                VerticalAlignment="Center" 
                FontWeight="DemiBold" 
                Margin="5"/>
            
            <TextBox 
                Text="{Binding Filter, ElementName=CustomFilterControl,UpdateSourceTrigger=PropertyChanged}" 
                Width="200" 
                Margin="5"
                VerticalAlignment="Center"
                />
        </StackPanel>
    </Grid>
</UserControl>
