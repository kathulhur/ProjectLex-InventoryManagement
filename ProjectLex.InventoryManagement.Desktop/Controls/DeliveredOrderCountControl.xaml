<UserControl x:Class="ProjectLex.InventoryManagement.Desktop.Controls.DeliveredOrderCountControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectLex.InventoryManagement.Desktop.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20 20 20 20">

        <Label FontFamily="Sogoe UI" FontWeight="Bold" HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="DELIVERED" FontSize="18" Foreground="#2d89ef"/>
                <TextBlock Text="{Binding DeliveredOrdersCount}" Style="{StaticResource MaterialDesignTextBlock}" FontSize="24" VerticalAlignment="Center"/>
            </StackPanel>
        </Label>

    </Grid>
</UserControl>
