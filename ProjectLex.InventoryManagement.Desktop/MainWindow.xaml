<Window x:Class="ProjectLex.InventoryManagement.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectLex.InventoryManagement.Desktop"
        xmlns:views="clr-namespace:ProjectLex.InventoryManagement.Desktop.Views"
        xmlns:view_models="clr-namespace:ProjectLex.InventoryManagement.Desktop.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Icon="/Assets/logo.png">
    <Grid>
        
        <Grid.Resources>
            <DataTemplate DataType="{x:Type view_models:CategoryListViewModel}">
                <views:CategoryListView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type view_models:CreateCategoryViewModel}">
                <views:CreateCategoryView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type view_models:EditCategoryViewModel}">
                <views:EditCategoryView />
            </DataTemplate>
            
            
            

            <DataTemplate DataType="{x:Type view_models:SupplierListViewModel}">
                <views:SupplierListView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type view_models:CreateSupplierViewModel}">
                <views:CreateSupplierView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type view_models:EditSupplierViewModel}">
                <views:EditSupplierView />
            </DataTemplate>

            
            
            
            <DataTemplate DataType="{x:Type view_models:RoleListViewModel}">
                <views:RoleListView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type view_models:CreateRoleViewModel}">
                <views:CreateRoleView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type view_models:EditRoleViewModel}">
                <views:EditRoleView />
            </DataTemplate>

            
            
            
            <DataTemplate DataType="{x:Type view_models:UserListViewModel}">
                <views:UserListView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type view_models:CreateUserViewModel}">
                <views:CreateUserView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type view_models:EditUserViewModel}">
                <views:EditUserView />
            </DataTemplate>

            
            

            <DataTemplate DataType="{x:Type view_models:StoreListViewModel}">
                <views:StoreListView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type view_models:CreateStoreViewModel}">
                <views:CreateStoreView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type view_models:EditStoreViewModel}">
                <views:EditStoreView />
            </DataTemplate>

            



            <DataTemplate DataType="{x:Type view_models:ProductListViewModel}">
                <views:ProductListView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type view_models:CreateProductViewModel}">
                <views:CreateProductView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type view_models:EditProductViewModel}">
                <views:EditProductView />
            </DataTemplate>


            

            <DataTemplate DataType="{x:Type view_models:OrderListViewModel}">
                <views:OrderListView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type view_models:CreateOrderViewModel}">
                <views:CreateOrderView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type view_models:EditOrderViewModel}">
                <views:EditOrderView />
            </DataTemplate>




            <DataTemplate DataType="{x:Type view_models:OrderDetailListViewModel}">
                <views:OrderDetailListView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type view_models:CreateOrderDetailViewModel}">
                <views:CreateOrderDetailView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type view_models:EditOrderDetailViewModel}">
                <views:EditOrderDetailView />
            </DataTemplate>

            <!--<DataTemplate DataType="{x:Type view_models:AttributeListViewModel}">
                <views:AttributeListView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type view_models:CreateAttributeViewModel}">
                <views:CreateAttributeView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type view_models:ModifyAttributeViewModel}">
                <views:ModifyAttributeView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type view_models:AttributeValueListViewModel}">
                <views:AttributeValueListView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type view_models:CreateAttributeValueViewModel}">
                <views:CreateAttributeValueView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type view_models:ModifyAttributeValueViewModel}">
                <views:ModifyAttributeValueView />
            </DataTemplate>-->

        </Grid.Resources>
        
        
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <Button Grid.Row="0" Content="Category List" Command="{Binding NavigateToCategoryListCommand}"/>
        <Button Grid.Row="1" Content="Supplier List" Command="{Binding NavigateToSupplierListCommand}"/>
        <Button Grid.Row="2" Content="Role List" Command="{Binding NavigateToRoleListCommand}"/>
        <Button Grid.Row="3" Content="User List" Command="{Binding NavigateToUserListCommand}"/>
        <Button Grid.Row="4" Content="Store List" Command="{Binding NavigateToStoreListCommand}"/>
        <Button Grid.Row="5" Content="Product List" Command="{Binding NavigateToProductListCommand}"/>
        <Button Grid.Row="6" Content="Order List" Command="{Binding NavigateToOrderListCommand}"/>
        <!--<Button Grid.Row="7" Content="Order List" Command="{Binding NavigateToOrderDetailListCommand}"/>-->
        <!--<Button Grid.Row="5" Content="Attribute List" Command="{Binding NavigateToAttributeListCommand}"/>-->

        <Button Grid.Row="7"  Command="{ Binding LogOutCommand }">Logout</Button>
        <ContentControl Grid.Row="8" Content="{Binding CurrentViewModel}" />
    </Grid>
</Window>
