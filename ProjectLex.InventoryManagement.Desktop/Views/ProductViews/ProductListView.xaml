<UserControl x:Class="ProjectLex.InventoryManagement.Desktop.Views.ProductListView"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectLex.InventoryManagement.Desktop.Views"
             xmlns:views="clr-namespace:ProjectLex.InventoryManagement.Desktop.Views"
             xmlns:view_models="clr-namespace:ProjectLex.InventoryManagement.Desktop.ViewModels"
             xmlns:controls="clr-namespace:ProjectLex.InventoryManagement.Desktop.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">

    <materialDesign:DialogHost 
        CloseOnClickAway="true" 
        IsOpen="{ Binding IsDialogOpen, Mode=OneWay}" 
        DialogBackground="Transparent">

        <materialDesign:DialogHost.DialogContent>
            <materialDesign:Card UniformCornerRadius="10">
                <ContentControl Content="{ Binding DialogViewModel }"/>
            </materialDesign:Card>
        </materialDesign:DialogHost.DialogContent>
    
        <Grid Margin="30 30 30 30">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock 
                        Grid.Column="0" 
                        Text="Products"
                        Style="{StaticResource MaterialDesignHeadline3TextBlock}"/>

                <Button
                    Grid.Column="1"
                    Command="{ Binding CreateProductCommand }"
                    Style="{StaticResource MaterialDesignPaperButton}"
                    >
                    <materialDesign:PackIcon Kind="Add"/>
                </Button>
            </Grid>

            <Grid 
                Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <DataGrid
                    Grid.Row="0"
                    ItemsSource="{Binding Products}"
                    Style="{StaticResource MaterialDesignDataGrid}"
                    BorderBrush="Black"
                    BorderThickness="2"
                    IsReadOnly="True"
                    AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                                Header="Name"
                                HeaderStyle="{StaticResource MaterialDesignDataGridColumnHeader}"
                                Binding="{Binding ProductName}"
                                Width="auto"/>

                        <DataGridTextColumn
                                Header="SKU"
                                HeaderStyle="{StaticResource MaterialDesignDataGridColumnHeader}"
                                Binding="{Binding ProductSKU}"
                                Width="auto"/>

                        <DataGridTextColumn
                                Header="Unit"
                                HeaderStyle="{StaticResource MaterialDesignDataGridColumnHeader}"
                                Binding="{Binding ProductUnit}"
                                Width="auto"/>

                        <DataGridTextColumn
                                Header="Price"
                                HeaderStyle="{StaticResource MaterialDesignDataGridColumnHeader}"
                                Binding="{Binding ProductPrice}"
                                Width="auto"/>

                        <DataGridTextColumn
                                Header="Quantity"
                                HeaderStyle="{StaticResource MaterialDesignDataGridColumnHeader}"
                                Binding="{Binding ProductQuantity}"
                                Width="auto"/>

                        <DataGridTextColumn
                                Header="Availability"
                                HeaderStyle="{StaticResource MaterialDesignDataGridColumnHeader}"
                                Binding="{Binding ProductAvailability}"
                                Width="auto"/>


                        <DataGridTextColumn
                                Header="Category"
                                HeaderStyle="{StaticResource MaterialDesignDataGridColumnHeader}"
                                Binding="{Binding Category.CategoryName}"
                                Width="auto"/>

                        <DataGridTextColumn
                                Header="Supplier"
                                HeaderStyle="{StaticResource MaterialDesignDataGridColumnHeader}"
                                Binding="{Binding Supplier.SupplierName}"
                                Width="auto"/>


                        <DataGridTemplateColumn 
                                Header="Actions"
                                HeaderStyle="{StaticResource MaterialDesignDataGridColumnHeader}"
                                Width="auto">

                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button
                                            Grid.Column="0"
                                            Margin="0 0 5 0"
                                            BorderBrush="Orange"
                                            Style="{StaticResource MaterialDesignPaperButton}"
                                            Command="{
                                                Binding DataContext.EditProductCommand, 
                                                RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=views:ProductListView}}"
                                            CommandParameter="{Binding}">
                                            <materialDesign:PackIcon Kind="Edit"/>
                                        </Button>

                                        <Button
                                            Grid.Column="1"
                                            BorderBrush="OrangeRed"
                                            Style="{StaticResource MaterialDesignPaperButton}"
                                            Command="{
                                                Binding DataContext.RemoveProductCommand, 
                                                RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=views:ProductListView}}"
                                            CommandParameter="{Binding}">
                                            <materialDesign:PackIcon Kind="Remove"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <controls:FilterControl Filter="{Binding ProductListViewHelper.Filter}"/>
                    </Grid>
                    <Grid Grid.Column="1">
                        <controls:PaginationControl
                            CurrentPage="{Binding ProductListViewHelper.CurrentPage}"
                            NumberOfPages="{Binding ProductListViewHelper.NumberOfPages}"
                            RecordsPerPage="{Binding ProductListViewHelper.RecordsPerPage}"
                            SelectedRecordsPerPage="{Binding ProductListViewHelper.SelectedRecordsPerPage}"
                            FirstPageCommand="{Binding ProductListViewHelper.FirstPageCommand}"
                            PreviousPageCommand="{Binding ProductListViewHelper.PreviousPageCommand}"
                            NextPageCommand="{Binding ProductListViewHelper.NextPageCommand}"
                            LastPageCommand="{Binding ProductListViewHelper.LastPageCommand}"
                        />
                    </Grid>
                </Grid>
            </Grid>


        </Grid>
    </materialDesign:DialogHost>

</UserControl>
