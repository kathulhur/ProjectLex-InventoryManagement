<UserControl x:Class="ProjectLex.InventoryManagement.Desktop.Views.LogListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectLex.InventoryManagement.Desktop.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d">
    
    
    <Grid Margin="30 30 30 30">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label 
            Grid.Column="0" 
            Style="{StaticResource MaterialDesignLabel}">
            <Label.Content>
                <TextBlock Text="Activity Logs" Style="{StaticResource MaterialDesignHeadline3TextBlock}"/>
            </Label.Content>
        </Label>

        <Grid 
            Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <DataGrid
                Grid.Row="0"
                ItemsSource="{Binding Logs}"
                Style="{StaticResource MaterialDesignDataGrid}"
                BorderBrush="Black"
                BorderThickness="2"
                IsReadOnly="True"
                AutoGenerateColumns="False"
                >
                <DataGrid.Columns>

                    <DataGridTextColumn
                            Header="DateTime"
                            HeaderStyle="{StaticResource MaterialDesignDataGridColumnHeader}"
                            Binding="{Binding DateTime}"
                            Width="auto"/>

                    <DataGridTextColumn
                            Header="LogID"
                            HeaderStyle="{StaticResource MaterialDesignDataGridColumnHeader}"
                            Binding="{Binding LogID}"
                            Width="auto"/>

                    <DataGridTextColumn
                            Header="Staff"
                            HeaderStyle="{StaticResource MaterialDesignDataGridColumnHeader}"
                            Binding="{Binding StaffName}"
                            Width="auto"/>

                    <DataGridTextColumn
                            Header="Category"
                            HeaderStyle="{StaticResource MaterialDesignDataGridColumnHeader}"
                            Binding="{Binding LogCategory}"
                            Width="auto"/>

                    <DataGridTextColumn
                            Header="Action"
                            HeaderStyle="{StaticResource MaterialDesignDataGridColumnHeader}"
                            Binding="{Binding ActionType}"
                            Width="auto"/>

                    <DataGridTextColumn
                            Header="Details"
                            HeaderStyle="{StaticResource MaterialDesignDataGridColumnHeader}"
                            Binding="{Binding LogDetails}"
                            Width="auto"/>


                </DataGrid.Columns>
            </DataGrid>
            <StackPanel 
                Grid.Row="1"
                Orientation="Horizontal"
                HorizontalAlignment="Right">
                <TextBlock Text="Records per page" Margin="5" VerticalAlignment="Center"/>
                <ComboBox 
                    ItemsSource="{Binding RecordsPerPage}" 
                    SelectedItem="{Binding SelectedRecordsPerPage, UpdateSourceTrigger=PropertyChanged}" 
                    VerticalAlignment="Center" 
                    Margin="5" Width="80"
                    />
                
                <Button Content="&lt;&lt;" ToolTip="First Page" Margin="5" Command="{Binding FirstPageCommand}"/>
                <Button Content="&lt;" ToolTip="Previous Page" Margin="5" Command="{Binding PreviousPageCommand}"/>
                <TextBlock VerticalAlignment="Center">
                    <TextBlock.Text>
                        <MultiBinding StringFormat=" {0} of {1}">
                            <Binding Path="CurrentPage"/>
                            <Binding Path="NumberOfPages"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <Button Content="&gt;" ToolTip="Next Page" Margin="5" Command="{Binding NextPageCommand}"/>
                <Button Content="&gt;&gt;" ToolTip="Last Page" Margin="5" Command="{Binding LastPageCommand}"/>
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
